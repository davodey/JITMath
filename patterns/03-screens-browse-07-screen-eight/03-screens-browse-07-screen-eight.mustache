{{> components-navigation}}
<div class="container">
  {{> atoms-text(regular-text: "Which is a better buy: 14.5 oz can for $1.99 or 28 oz. can for $3.59?")}}
</div>

<div class="container">
    {{>components-cards-question-answer-correct-progress(answer: "Convert to unit price equation: $1.99/14.5 and $3.59/28")}}
    {{>components-cards-question-answer-correct-progress(answer: "Divide: $1.99/14.5 = 13.7 cents; $3.59/28 = 12.8 cents")}}
</div>

<div class="container">
  {{> atoms-large-text(large-text: "Steps 3/4")}}
    <div id="answerGroup" class="answers margin-top">
      {{>components-cards-question-answer(correct-or-wrong: 'wrong', answer: "Compare: 13.7 < 12.8 ")}}
      {{>components-cards-question-answer(correct-or-wrong: 'wrong', answer: "Compare: 13.7=1 2.8 ")}}
      {{>components-cards-question-answer(correct-or-wrong: 'wrong', answer: "Compare: 1.37 < 12.8 ")}}
      {{>components-cards-question-answer(correct-or-wrong: 'correct', answer: "Compare: 13.7>12.8")}}
    </div>
    {{>atoms-primary-button(primary: "Next Step", added-class: "mobile-resize next hide", url: '{{base-url}}{{link.screens-screen-nine}}')}}
</div>

