<div class="pe-card cursor-pointer" data-answer="{{correct-or-wrong}}">
    <div class="pe-card__content flex space-between align-center">
       <div class="answer">
           <span class=""><i class="fa fa-circle-thin margin-right" aria-hidden="true"></i>{{answer}}</span>
       </div>
        <div class="formula flex flex-column flex-end">
            <div class="formula-top">
              <span>{{math-top}}</span>
            </div>
            <div class="formula-bottom">
                <span style="margin-right:{{align-math}}">{{math-bottom-left}}</span><span>{{math-bottom-right}}</span>
            </div>
        </div>
    </div>
    <div class="pe-card__content text-center hide answer-big">
      {{>atoms-correct-text}}
    </div>
</div>
