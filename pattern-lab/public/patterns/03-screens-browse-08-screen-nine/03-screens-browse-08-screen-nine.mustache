{{> components-navigation}}
<div class="container">
  {{> atoms-text(regular-text: "Which is a better buy: 14.5 oz can for $1.99 or 28 oz. can for $3.59?")}}
</div>

<div class="container">
    {{>components-cards-question-answer-correct-progress(answer: "Convert to unit price equation: $1.99/14.5 and $3.59/28")}}
    {{>components-cards-question-answer-correct-progress(answer: "Divide: $1.99/14.5 = 13.7 cents; $3.59/28 = 12.8 cents")}}
    {{>components-cards-question-answer-correct-progress(answer:
    "Compare: 13.7 > 12.8")}}
</div>

<div class="container">
  {{> atoms-large-text(large-text: "Steps 4/4")}}
    <div id="answerGroup" class="answers margin-top">
      {{>components-cards-question-answer(correct-or-wrong: 'correct', answer: "The 28 oz. can is cheaper per unit. ")}}
      {{>components-cards-question-answer(correct-or-wrong: 'wrong', answer: "The 14.5 oz can is cheaper per unit. ")}}
      {{>components-cards-question-answer(correct-or-wrong:'wrong', answer: "They both are equal.")}}
      {{>components-cards-question-answer(correct-or-wrong: 'wrong', answer: "The 28 oz. can is more expensive.")}}
    </div>
    {{>atoms-primary-button(primary: "Finish", added-class: "mobile-resize next hide", url: '{{base-url}}{{link.screens-screen-ten}}')}}
</div>

